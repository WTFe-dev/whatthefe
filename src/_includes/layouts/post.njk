---
layout: layouts/base.njk
---

<article class="prose lg:prose-xl dark:prose-invert mx-auto">
  <header class="mb-8">
    <h1 class="text-3xl md:text-4xl font-bold mb-2">{{ title }}</h1>
    <div class="text-sm text-secondary-600 dark:text-secondary-400">
      <time datetime="{{ date | dateToISO }}">{{ date | readableDate }}</time>
      {% if tags %}
        <span class="mx-2">â€¢</span>
        <span>
          {% for tag in tags %}
            {% if tag != "posts" %}
              <a href="/tags/{{ tag }}" class="inline-block bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-2 py-1 rounded-md text-xs mr-2 mb-2 hover:bg-primary-200 dark:hover:bg-primary-800 transition-colors">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </span>
      {% endif %}
    </div>
  </header>

  {{ content | safe }}
</article>
