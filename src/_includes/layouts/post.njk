---

<article>
  <header>
    <h1>{{ title }}</h1>
    <div>
      <time datetime="{{ date | dateToISO }}">{{ date | readableDate }}</time>
      {% if tags %}
        <span>â€¢</span>
        <span>
          {% for tag in tags %}
            {% if tag != "posts" %}
              <a href="/tags/{{ tag }}">{{ tag }}</a>
            {% endif %}
          {% endfor %}
        </span>
      {% endif %}
    </div>
  </header>

  {{ content | safe }}
</article>
